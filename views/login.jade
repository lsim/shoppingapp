extends layout

block content
    h1= title
    form(action='/login', method='post')
        div
            p= flash
        div
            label Username:
                input(type='text', name='username')
        div
            label Password:
                input(type='password', name='password')
        div
            input(type='submit', value='Log in')
    p
        a(href='/register') Register
